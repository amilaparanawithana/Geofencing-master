    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">
    <!--android:id="@+id/">-->

    <Button
        android:id="@+id/remove_geofences_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="removeGeofencesButtonHandler"
        android:text="@string/remove_locations"
        android:layout_gravity="right" />

    <Button
        android:id="@+id/add_geofences_button"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="addGeofencesButtonHandler"
        android:text="@string/add_locations"
        android:layout_gravity="right" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></TableLayout>


    <!--<Button xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:id="@+id/button_add"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/button_add"-->
        <!--android:onClick="addItem"-->
        <!--android:layout_gravity="right" />-->

    <EditText
        android:id="@+id/item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_name_hint"
        android:inputType="text" />

    <EditText
        android:id="@+id/item_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_description_hint"
        android:inputType="text" />

    <EditText
        android:id="@+id/item_active_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_active_hint"
        android:inputType="number" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

<!--</RelativeLayout>-->
    </LinearLayout>
